# Database
DATABASE_URL=postgres://app:app@postgres:5432/app

# MinIO / S3
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=adminadmin
S3_ENDPOINT=http://minio:9000
S3_BUCKET=deid-br
S3_ACCESS_KEY=admin
S3_SECRET_KEY=adminadmin

# Redis
REDIS_URL=redis://redis:6379

# JWT Auth
JWT_ISSUER=https://auth.local
JWT_AUDIENCE=app
JWT_PRIVATE_KEY=<ES256 or Ed25519 PEM via Docker secret>
JWT_PUBLIC_KEY=<corresponding public key>

# De-identification
SALT_ROTATION_KEY=<32-byte-hex secret>

# Differential Privacy
DEFAULT_DP_EPSILON=1.0
DEFAULT_DP_DELTA=1e-5
EXPORT_COOLDOWN_MIN=60

# Localization
LOCALES=es,pt,en
DEFAULT_LOCALE=es

# Compliance
RESIDENCY=BR
POLICY_VERSION=MVP-1.2
CDR_ENABLE=true
HONEYTOKENS_ENABLE=true

# Security
LOW_BANDWIDTH=true
MFA_ENABLED=false

# OPA Policy Server
OPA_URL=http://opa:8181

# Application
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000
