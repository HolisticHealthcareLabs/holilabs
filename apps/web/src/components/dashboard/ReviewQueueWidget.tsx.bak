'use client';

/**
 * Review Queue Widget
 *
 * Displays AI-generated content that needs clinician verification
 * Shows pending items with priority, confidence, and quick action buttons
 */

import { useState, useEffect } from 'react';

interface ReviewQueueItem {
  id: string;
  contentType: string;
  contentId: string;
  sectionType?: string;
  priority: number;
  confidence: number;
  patientId: string;
  patientName: string;
  flagReason: string;
  flagDetails?: string;
  status: string;
  createdAt: string;
}

interface ReviewQueueStats {
  totalPending: number;
  totalInReview: number;
  highPriorityCount: number;
  avgConfidence: number;
}

export function ReviewQueueWidget() {
  const [items, setItems] = useState<ReviewQueueItem[]>([]);
  const [stats, setStats] = useState<ReviewQueueStats | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [processingId, setProcessingId] = useState<string | null>(null);

  useEffect(() => {
    fetchQueueItems();
  }, []);

  const fetchQueueItems = async () => {
    try {
      setLoading(true);
      setError(null);

      const response = await fetch('/api/review-queue?status=PENDING&limit=10');
      if (!response.ok) throw new Error('Failed to fetch review queue');

      const result = await response.json();

      if (result.success) {
        setItems(result.data.items);
        setStats(result.data.stats);
      }
    } catch (err) {
      console.error('Error fetching review queue:', err);
      setError(err instanceof Error ? err.message : 'Unknown error');
    } finally {
      setLoading(false);
    }
  };

  const handleReview = async (itemId: string, status: string) => {
    try {
      setProcessingId(itemId);

      const response = await fetch(`/api/review-queue/${itemId}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          status,
          wasCorrect: status === 'APPROVED',
        }),
      });

      if (!response.ok) throw new Error('Failed to update review status');

      // Refresh the queue
      await fetchQueueItems();
    } catch (err) {
      console.error('Error updating review status:', err);
      alert('Failed to update review status');
    } finally {
      setProcessingId(null);
    }
  };

  const getPriorityColor = (priority: number) => {
    if (priority >= 9) return 'bg-red-100 text-red-800 border-red-300';
    if (priority >= 7) return 'bg-orange-100 text-orange-800 border-orange-300';
    if (priority >= 5) return 'bg-yellow-100 text-yellow-800 border-yellow-300';
    return 'bg-blue-100 text-blue-800 border-blue-300';
  };

  const getConfidenceColor = (confidence: number) => {
    if (confidence >= 0.8) return 'text-green-600';
    if (confidence >= 0.6) return 'text-yellow-600';
    return 'text-red-600';
  };

  const getFlagReasonLabel = (reason: string) => {
    const labels: Record<string, string> = {
      low_confidence: 'Low Confidence',
      high_risk: 'High Risk',
      new_clinician: 'New Clinician',
      manual_request: 'Manual Request',
    };
    return labels[reason] || reason;
  };

  if (loading) {
    return (
      <div className="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl shadow-lg p-6">
        <div className="flex items-center justify-between mb-4">
          <h2 className="text-lg font-bold text-neutral-900 dark:text-neutral-100">
            Review Queue
          </h2>
        </div>
        <div className="flex justify-center py-8">
          <div className="animate-spin h-8 w-8 border-4 border-primary-500 border-t-transparent rounded-full"></div>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl shadow-lg p-6">
        <div className="flex items-center justify-between mb-4">
          <h2 className="text-lg font-bold text-neutral-900 dark:text-neutral-100">
            Review Queue
          </h2>
        </div>
        <div className="text-center py-8">
          <div className="text-4xl mb-2">ï¿½</div>
          <p className="text-sm font-medium text-error-600">Failed to load review queue</p>
          <p className="text-xs text-neutral-600 mt-1">{error}</p>
          <button
            onClick={fetchQueueItems}
            className="mt-4 px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 text-sm"
          >
            Retry
          </button>
        </div>
      </div>
    );
  }

  return (
    <div className="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-xl shadow-lg p-6">
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <div>
          <h2 className="text-lg font-bold text-neutral-900 dark:text-neutral-100">
            Review Queue
          </h2>
          <p className="text-xs text-neutral-600 dark:text-neutral-400 mt-1">
            AI content awaiting verification
          </p>
        </div>
        <button
          onClick={fetchQueueItems}
          className="text-sm text-primary-600 hover:text-primary-700 font-medium"
        >
          Refresh
        </button>
      </div>

      {/* Stats */}
      {stats && (
        <div className="grid grid-cols-3 gap-4 mb-6">
          <div className="text-center">
            <div className="text-2xl font-bold text-neutral-900 dark:text-neutral-100">
              {stats.totalPending}
            </div>
            <div className="text-xs text-neutral-600 dark:text-neutral-400">Pending</div>
          </div>
          <div className="text-center">
            <div className="text-2xl font-bold text-orange-600">
              {stats.highPriorityCount}
            </div>
            <div className="text-xs text-neutral-600 dark:text-neutral-400">High Priority</div>
          </div>
          <div className="text-center">
            <div className={`text-2xl font-bold ${getConfidenceColor(stats.avgConfidence)}`}>
              {(stats.avgConfidence * 100).toFixed(0)}%
            </div>
            <div className="text-xs text-neutral-600 dark:text-neutral-400">Avg Confidence</div>
          </div>
        </div>
      )}

      {/* Queue Items */}
      <div className="space-y-3 max-h-96 overflow-y-auto">
        {items.length === 0 ? (
          <div className="text-center py-8">
            <div className="text-4xl mb-2">âœ…</div>
            <p className="text-sm font-medium text-neutral-700 dark:text-neutral-300">
              All caught up!
            </p>
            <p className="text-xs text-neutral-600 dark:text-neutral-400 mt-1">
              No items pending review
            </p>
          </div>
        ) : (
          items.map((item) => (
            <div
              key={item.id}
              className="border border-neutral-200 dark:border-neutral-700 rounded-lg p-4 hover:bg-neutral-50 dark:hover:bg-neutral-800 transition"
            >
              {/* Item Header */}
              <div className="flex items-start justify-between mb-2">
                <div className="flex-1">
                  <div className="flex items-center gap-2 mb-1">
                    <span className="font-semibold text-sm text-neutral-900 dark:text-neutral-100">
                      {item.patientName}
                    </span>
                    <span
                      className={`px-2 py-0.5 rounded text-xs font-medium border ${getPriorityColor(item.priority)}`}
                    >
                      P{item.priority}
                    </span>
                  </div>
                  <div className="text-xs text-neutral-600 dark:text-neutral-400">
                    {item.contentType.replace('_', ' ').toUpperCase()}
                    {item.sectionType && ` - ${item.sectionType}`}
                  </div>
                </div>
                <div className={`text-sm font-bold ${getConfidenceColor(item.confidence)}`}>
                  {(item.confidence * 100).toFixed(0)}%
                </div>
              </div>

              {/* Flag Reason */}
              <div className="mb-3">
                <div className="inline-flex items-center gap-1 text-xs">
                  <span className="text-neutral-500">Flagged:</span>
                  <span className="font-medium text-neutral-700 dark:text-neutral-300">
                    {getFlagReasonLabel(item.flagReason)}
                  </span>
                </div>
                {item.flagDetails && (
                  <div className="text-xs text-neutral-600 dark:text-neutral-400 mt-1">
                    {item.flagDetails}
                  </div>
                )}
              </div>

              {/* Actions */}
              <div className="flex gap-2">
                <button
                  onClick={() => handleReview(item.id, 'APPROVED')}
                  disabled={processingId === item.id}
                  className="flex-1 px-3 py-1.5 bg-green-500 hover:bg-green-600 text-white rounded text-xs font-medium disabled:opacity-50 disabled:cursor-not-allowed transition"
                >
                  {processingId === item.id ? 'Processing...' : 'Approve'}
                </button>
                <button
                  onClick={() => handleReview(item.id, 'IN_REVIEW')}
                  disabled={processingId === item.id}
                  className="flex-1 px-3 py-1.5 bg-blue-500 hover:bg-blue-600 text-white rounded text-xs font-medium disabled:opacity-50 disabled:cursor-not-allowed transition"
                >
                  Review
                </button>
                <button
                  onClick={() => handleReview(item.id, 'CORRECTED')}
                  disabled={processingId === item.id}
                  className="flex-1 px-3 py-1.5 bg-orange-500 hover:bg-orange-600 text-white rounded text-xs font-medium disabled:opacity-50 disabled:cursor-not-allowed transition"
                >
                  Correct
                </button>
              </div>
            </div>
          ))
        )}
      </div>

      {/* View All Link */}
      {items.length > 0 && (
        <div className="mt-4 text-center">
          <button
            onClick={() => (window.location.href = '/dashboard/review-queue')}
            className="text-sm text-primary-600 hover:text-primary-700 font-medium"
          >
            View All Items â†’
          </button>
        </div>
      )}
    </div>
  );
}
