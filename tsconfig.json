{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@holi/deid": ["./packages/deid/src"],
      "@holi/dp": ["./packages/dp/src"],
      "@holi/utils": ["./packages/utils/src"],
      "@holi/schemas": ["./packages/schemas/src"]
    }
  }
}
