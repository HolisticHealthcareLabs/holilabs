{
  "name": "holi-protocol",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm dev:web",
    "dev:all": "concurrently --names 'web,edge,sidecar' --prefix-colors 'blue,green,magenta' 'pnpm --filter @holi/web dev' 'pnpm --filter @holilabs/edge dev' 'sleep 3 && pnpm --filter @holilabs/sidecar dev'",
    "dev:web": "pnpm --filter @holi/web dev",
    "dev:edge": "pnpm --filter @holilabs/edge dev",
    "dev:sidecar": "pnpm --filter @holilabs/sidecar dev",
    "build:sidecar:enterprise": "pnpm --filter @holilabs/sidecar build:enterprise",
    "simulate-ehr": "node apps/sidecar/scripts/simulate-ehr.js",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "cd infra/docker && docker-compose up -d",
    "docker:down": "cd infra/docker && docker-compose down",
    "db:migrate": "cd apps/api && pnpm prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "docs:cortex:update": "node scripts/update-cortex-docs-metadata.js --mode auto",
    "docs:cortex:update:daily": "node scripts/update-cortex-docs-metadata.js --mode daily",
    "docs:cortex:update:monday": "node scripts/update-cortex-docs-metadata.js --mode monday --append-log",
    "docs:cortex:update:friday": "node scripts/update-cortex-docs-metadata.js --mode friday --append-log",
    "docs:cortex:update:weekly": "node scripts/update-cortex-docs-metadata.js --mode weekly --append-log",
    "docs:cortex:update:tracker": "node scripts/update-cortex-docs-metadata.js --mode friday --append-log --config configs/cortex-doc-automation.tracker-only.config.json",
    "docs:cortex:export:plan": "node scripts/cortex-export-helper.js --mode weekly --dry-run"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "@types/react": "18.2.46",
      "@types/react-dom": "18.2.18"
    }
  },
  "dependencies": {
    "@prisma/extension-read-replicas": "0.4.1"
  }
}